[root@elastic tmp]# cat /tmp/elastic_hosts
192.168.122.6,192.168.122.7,192.168.122.8

[root@elastic tmp]# cat start_es.sh
#!/bin/bash
export ES_JAVA_OPTS="-Xms1g -Xmx1g"
export UNICAST_HOSTS=`cat /tmp/elastic_hosts`

sysctl -w vm.max_map_count=262144
ulimit -n 65536

#expects path in $PATH
cd /usr/share/elasticsearch

#expects user id to be 'elasticsearch' to run the es-docker binary
su -c "/bin/bash bin/es-docker" elasticsearch
#/bin/bash bin/es-docker
sleep 100000

[root@elastic tmp]#


[root@elastic tmp]# cat /usr/share/elasticsearch/config/elasticsearch.yml
cluster.name: "elastic-cluster"
network.host: 0.0.0.0

# minimum_master_nodes need to be explicitly set when bound on a public IP
# set to 1 to allow single node clusters
# Details: https://github.com/elastic/elasticsearch/pull/17288

bootstrap.system_call_filter: false
#bootstrap.memory_lock: true
discovery.zen.minimum_master_nodes: 1
discovery.zen.ping.unicast.hosts: ${UNICAST_HOSTS}
[root@elastic tmp]#
